{
  "manifest_version": 2,

  "name": "Class Refresh",
  "description": "Autorefresh the page to check for any updates",
  "version": "1.0",
  
  "permissions": [
    "tabs",
    "alarms",
    "activeTab"
  ],
  
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
	"default_popup": "popup.html"
  }
}